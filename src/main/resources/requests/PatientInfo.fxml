<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTabPane?>
<?import com.jfoenix.controls.JFXTextField?>
<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="1200.0" stylesheets="@../css/colorScheme.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.requests.PatientInfoController">
   <children>
      <JFXTabPane side="BOTTOM" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <tabs>
            <Tab text="New Request">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <VBox prefHeight="200.0" prefWidth="100.0" spacing="25.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <AnchorPane prefHeight="70.0" prefWidth="200.0" style="-fx-background-color: #022D5A;">
                                 <children>
                                    <Label alignment="CENTER" text="Patient Information Request" textFill="WHITE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                       <font>
                                          <Font size="36.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </AnchorPane>
                              <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="40.0">
                                 <children>
                                    <Label text="Name:">
                                       <font>
                                          <Font size="40.0" />
                                       </font>
                                    </Label>
                                    <JFXTextField fx:id="txtName" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="25.0">
                                 <children>
                                    <Label text="Date of Birth:">
                                       <font>
                                          <Font size="40.0" />
                                       </font>
                                    </Label>
                                    <JFXTextField fx:id="txtDOB" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="25.0">
                                 <children>
                                    <Label fx:id="lblDesc" text="Description:">
                                       <font>
                                          <Font size="40.0" />
                                       </font>
                                    </Label>
                                    <JFXTextField fx:id="txtDesc" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="25.0">
                                 <children>
                                    <Label text="Priority:">
                                       <font>
                                          <Font size="40.0" />
                                       </font>
                                    </Label>
                                    <JFXComboBox fx:id="cmbPriority" focusColor="#022d5a" labelFloat="true" prefWidth="150.0" promptText="Priority" unFocusColor="BLACK">
                                            <items>
                                               <FXCollections fx:factory="observableArrayList">
                                                  <String fx:id="HIGH" fx:value="HIGH" />
                                                  <String fx:id="MEDIUM" fx:value="MEDIUM" />
                                                  <String fx:id="LOW" fx:value="LOW" />
                                               </FXCollections>
                                            </items>
                                    </JFXComboBox>

                                 </children>
                              </HBox>
                              <HBox alignment="CENTER" prefHeight="90.0" prefWidth="200.0" spacing="25.0">
                                 <children>
                                    <JFXButton fx:id="btnSendRequest" alignment="CENTER" contentDisplay="CENTER" onMouseClicked="#sendRequest" prefHeight="50.0" prefWidth="260.0" text="Send Request">
                                       <font>
                                          <Font size="30.0" />
                                       </font>
                                    </JFXButton>
                                    <JFXButton fx:id="btnCancel" onMouseClicked="#cancelSrc" prefHeight="50.0" prefWidth="260.0" text="Cancel">
                                       <font>
                                          <Font size="30.0" />
                                       </font>
                                    </JFXButton>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
            <Tab text="Patient Requests">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefWidth="1240.0">
                     <children>
                        <VBox prefHeight="607.0" prefWidth="1200.0" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="10.0">
                           <children>
                              <TableView fx:id="tblPatient" prefHeight="593.0" prefWidth="1200.0">
                                <columns>
                                  <TableColumn fx:id="tblName" prefWidth="300.0" text="Name" />
                                    <TableColumn fx:id="tblDOB" prefWidth="300.0" text="Date Of Birth" />
                                    <TableColumn fx:id="tblDesc" prefWidth="300.0" text="Description" />
                                    <TableColumn fx:id="tblPriority" prefWidth="260.0" text="Priority" />
                                </columns>
                              </TableView>
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
         </tabs>
      </JFXTabPane>
   </children>
</AnchorPane>
